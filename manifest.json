{
  "manifest_version": 3,
  "name": "YouTube Transcript & AI Toolkit",
  "version": "1.0.0",
  "description": "Access and manipulate YouTube video transcripts with AI-powered features",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["googleai.js", "sidepanel.html", "sidepanel.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "oauth2": {
    "client_id": "<YOUR_CLIENT_ID>.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/cloud-language"
    ]
  }
}